{
  "name": "base-ddd",
  "version": "0.0.0-development",
  "description": "Node base DDD",
  "keywords": [
    "DDD",
    "node",
    "value object"
  ],
  "author": "Jose Guillermo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jguillermo/node-base-ddd"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "rimraf dist && rimraf render",
    "build": "tsc --project tsconfig.build.json",
    "format-fix": "prettier --write \"src/**/*.ts\"",
    "format": "prettier --check \"src/**/*.ts\"",
    "console:dev": "ts-node -r tsconfig-paths/register src/app/index.ts",
    "console": "node dist/app/index.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "semantic-release": "semantic-release",
    "co": "git-cz"
  },
  "dependencies": {
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.7",
    "underscore.string": "^3.3.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.0",
    "@types/validator": "^13.7.13",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expect-type": "^0.15.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "semantic-release": "^20.1.1",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!index.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "master"
    ]
  }
}
